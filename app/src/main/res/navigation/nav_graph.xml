<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.landtech.presentation.ui.orders.OrdersFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_ordersFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="com.example.landtech.presentation.ui.order_details.OrderDetailsFragment"
        android:label="OrderDetailsFragment" >
        <argument
            android:name="order"
            app:argType="com.example.landtech.data.database.models.Order" />
        <action
            android:id="@+id/action_orderDetailsFragment_to_engineersSelectFragment"
            app:destination="@id/engineersSelectFragment"
            app:popUpTo="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/engineersSelectFragment"
        android:name="com.example.landtech.presentation.ui.order_details.tab_fragments.work.engineers_select.EngineersSelectFragment"
        android:label="EngineersSelectFragment" />
</navigation>